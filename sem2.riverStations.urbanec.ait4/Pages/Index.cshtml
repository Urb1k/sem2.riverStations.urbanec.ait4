        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.River)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FloodWarningValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DroughtWarningValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeToleranceInMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>

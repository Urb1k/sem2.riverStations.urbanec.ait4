    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stations[0].River)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations[0].FloodWarningValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations[0].DroughtWarningValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations[0].TimeToleranceInMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations[0].CreatedByUser)
